<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

    <constant name="struts.enable.DynamicMethodInvocation" value="false" />
    <constant name="struts.devMode" value="true" />

    <package name="default" namespace="/" extends="struts-default">

        <default-action-ref name="index" />

        <global-results>
            <result name="error">/error.jsp</result>
        </global-results>

        <global-exception-mappings>
            <exception-mapping exception="java.lang.Exception" result="error"/>
        </global-exception-mappings>

         <action name="Index_*" class="com.uf.fanfan.action.Login" method="{1}">
           <result name="success">/success.jsp</result>
        </action>
         <action name="Product_*" class="com.uf.fanfan.action.ProductShowAction" method="{1}">
           <result name="showProduct">/index/product.jsp</result>
           <result name="loginPage">/index/login.jsp</result>
        </action>
    </package>

    

</struts>
